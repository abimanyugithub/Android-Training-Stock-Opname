<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abimanyuag.mystocktake.cari_saya"
    android:background="@drawable/home_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bantu Saya"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#6effffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Masukan lokasi anda"
        android:id="@+id/textView20"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/send_loc"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/send_loc"
        android:background="#6effffff"
        android:digits="AaBbCcDdEeFfGgHhJjKkLlMmNnPpQq1234567890"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/bt_req"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REQUEST"
        android:id="@+id/bt_req"
        android:background="#6e2f6ea8"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/send_loc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:text="* Dikenakan biaya SMS sesuai tarif operator"
        android:id="@+id/textView29"
        android:gravity="center"
        android:layout_below="@+id/bt_req"
        android:layout_centerHorizontal="true"
        android:textColor="#2f6ea8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:text="Kami akan membantu di lokasi dimana anda berada"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

</RelativeLayout>
