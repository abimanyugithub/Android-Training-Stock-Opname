<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abimanyuag.mystocktake.bantuan"
    android:background="@drawable/home_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bantuan"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:textColor="#6e2f6ea8"
        android:typeface="normal"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/bt_kalk"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:background="@drawable/abi_kalk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kalkulator"
        android:id="@+id/textView12"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/bt_kalk"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/bt_upgrd"
        android:layout_alignTop="@+id/bt_kalk"
        android:layout_toEndOf="@+id/bt_kalk"
        android:layout_marginLeft="10dp"
        android:background="@drawable/abi_upgrade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Upgrade"
        android:layout_marginLeft="33dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/bt_upgrd"
        android:layout_alignStart="@+id/bt_upgrd" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/bt_tntg"
        android:layout_marginLeft="10dp"
        android:background="@drawable/abi_info"
        android:layout_alignTop="@+id/bt_me"
        android:layout_toEndOf="@+id/bt_me" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/bt_me"
        android:layout_marginTop="5dp"
        android:background="@drawable/ab_find"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bantu Saya"
        android:id="@+id/textView15"
        android:layout_below="@+id/bt_tntg"
        android:layout_alignStart="@+id/textView12" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tentang"
        android:id="@+id/textView14"
        android:layout_below="@+id/bt_tntg"
        android:layout_alignStart="@+id/textView13" />

</RelativeLayout>
